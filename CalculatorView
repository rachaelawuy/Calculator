    private void button0ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (value != 0) {
            value2 = value2 + 0;
            viewResultTextArea.setText(value2);
            this.buttonAC.setText("C");
        }
    }                                       

    private void button1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
