    private void buttonPlusMinusActionPerformed(java.awt.event.ActionEvent evt) {                                                
        if (viewInputTextArea.getText().charAt(0) == '-') {
            value *= -1;
            value2 = value2.substring(1, value2.length());
        } else {
            value *= -1;
            String temp = value2;
            value2 = "-" + temp;
        }
        viewInputTextArea.setText(value2);
        isDecimal = false;
        decimalCounter = 0;
    }                                               

    private void buttonCEActionPerformed(java.awt.event.ActionEvent evt) {                                         
        value = 0;
        value2 = value + "";
        viewResultTextArea.setText(value2);
        isDecimal = false;
        decimalCounter = 0;
    }                                        

    private void buttonEqualsActionPerformed(java.awt.event.ActionEvent evt) {                                             
        value = Double.parseDouble(viewResultTextArea.getText());
        elements.push(value);
        viewInputTextArea.setText(value2);
        controller.pushElements(this.elements);
        value = controller.calculate();
        System.out.println(value);
        value2 = value + "";
        viewResultTextArea.setText(value2);
        isDecimal = false;
        decimalCounter = 0;
        value = 0;
        value2 = "";
    }                                            

