    private void setValue(double input) {
        boolean containsChar = value2.contains("+") || value2.contains("-") || value2.contains("*") || value2.contains("/") || value2.contains("(") || value2.contains(")");
        if (containsChar) {
            if (value == Double.MIN_VALUE) {
                value = input;
                value2 += value + "";
            } else {
                if (isDecimal) {
                    decimalCounter++;
                    double temp = input / (Math.pow(10, decimalCounter));
                    value += temp;
                    System.out.println(value);
                    String s = input + "";
                    s = s.substring(0, s.length() - 2);
                    int temp2 = Integer.parseInt(s);
                    value2 += "." + temp2;
                } else {
                    value = (value * 10) + input;
                    value2 += input + "";
                }
            }
        } else {
            if (value == Double.MIN_VALUE) {
                value = input;
                if (value2.charAt(0) == '0') {
                    value2 = value + "";
                } else {
                    System.out.println("a");
                    value2 += value + "";
                }
            } else {
                if (isDecimal) {
                    decimalCounter++;
                    double temp = input / (Math.pow(10, decimalCounter));
                    value += temp;
                    System.out.println(value);
                    String s = input + "";
                    s = s.substring(0, s.length() - 2);
                    int temp2 = Integer.parseInt(s);
                    if (value2.charAt(value2.length() - 1) == '0') {
                        value2 = value2.substring(0, value2.length() - 1);
                    }
                    value2 += temp2;
                } else {
                    value = (value * 10) + input;
                    value2 = value + "";
                }
            }
        }
        viewResultTextArea.setText(value + "");
        if (containsChar && !isDecimal) {
            value2 = value2.substring(0, value2.length() - 2);
        }
    }
    
    private void setOperator(String input){
        value = Double.parseDouble(viewResultTextArea.getText());
        elements.push(value);
        value = 0;
        value2 += " "+input+" ";
        elements.push(input);
        viewInputTextArea.setText(value2);
        isDecimal = false;
        decimalCounter = 0;
    }

