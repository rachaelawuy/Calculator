    private void buttonDotActionPerformed(java.awt.event.ActionEvent evt) {                                          
        value2 = value2 + ".";
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
        isDecimal = true;
    }                                         

    private void buttonPlusActionPerformed(java.awt.event.ActionEvent evt) {                                           
        value = Double.parseDouble(value2);
        elements.push(value);
        value2 += " + ";
        elements.push("+");
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
        isDecimal = false;
        decimalCounter = 0;
    }                                          

    private void buttonMinusActionPerformed(java.awt.event.ActionEvent evt) {                                            
        value = Double.parseDouble(value2);
        elements.push(value);
        value2 += " - ";
        elements.push("-");
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
        isDecimal = false;
        decimalCounter = 0;
    }                                           

    private void buttonMultiplyActionPerformed(java.awt.event.ActionEvent evt) {                                               
        value = Double.parseDouble(value2);
        elements.push(value);
        value2 += " x ";
        elements.push("x");
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
        isDecimal = false;
        decimalCounter = 0;
    }                                              

    private void buttonDivisionActionPerformed(java.awt.event.ActionEvent evt) {                                               
        value = Double.parseDouble(value2);
        elements.push(value);
        value = 0;
        value2 += " / ";
        elements.push("/");
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
        isDecimal = false;
        decimalCounter = 0;
    }                                              

    private void buttonPlusMinusActionPerformed(java.awt.event.ActionEvent evt) {                                                
        if (viewResultTextArea.getText().charAt(0) == '-') {
            value *= -1;
            value2 = value2.substring(1, value2.length());
        } else {
            value *= -1;
            String temp = value2;
            value2 = "-" + temp;
        }
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
        isDecimal = false;
        decimalCounter = 0;
    }                                               

    private void buttonACActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if (this.buttonAC.getText().equalsIgnoreCase("c")) {
            value = 0;
            value2 = value + "";
            buttonAC.setText("AC");
            viewResultTextArea.setText(value2.substring(0, 1));
        } else {
            this.elements = new Stack();
            value = 0;
            value2 = value + "";
            viewResultTextArea.setText(value2.substring(0, 1));
        }
        isDecimal = false;
        decimalCounter = 0;
    }                                        

    private void buttonEqualsActionPerformed(java.awt.event.ActionEvent evt) {                                             
        controller.pushElements(this.elements);
        value = controller.calculate();
        System.out.println(value);
        value2 = value + "";
        viewResultTextArea.setText(value2);
        isDecimal = false;
        decimalCounter = 0;
        value=0;
        value2="";
    }                                            

    private void setValue(double input){
         if (value == 0) {
            value = input;
            if (!value2.equals("") && value2.charAt(0)=='0') {
                value2= value + "";
            } else {
                value2+= value + "";
            } 
            value2 = value2.substring(0, value2.length() - 2);
        } else {
            if (value2.contains(".")) {
                if (!isDecimal) {
                    value = (value * 10) + input;
                    value2 = value2.substring(0, value2.length() - 2) + input;
                    value2= value2.substring(0, value2.length() - 2);
                } else {
                    decimalCounter++;
                    double temp = input / (Math.pow(10, decimalCounter));
                    value = value + temp;
                    value2 = value2 + input;
                }
            } else {
                value = (value * 10) + input;
                value2 = value2 + input;
            }
        }
        viewResultTextArea.setText(value2);
        this.buttonAC.setText("C");
    }
    
